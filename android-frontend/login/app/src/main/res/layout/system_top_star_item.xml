<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/system_top_star_rank"
        android:layout_width="@dimen/rank_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="6"
        android:textSize="@dimen/rank_4_rank_size" />

    <TextView
        android:id="@+id/system_top_star_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username "
        android:textSize="@dimen/rank_4_text_size" />

    <TextView
        android:id="@+id/system_top_star_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/rank_4_text_size" />

    <TextView
        android:id="@+id/system_top_star_starIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_star"
        android:backgroundTint="@color/colorAccent"
        android:textSize="@dimen/rank_4_text_size" />
</LinearLayout>