<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/system_top_sore_rank"
        android:layout_width="@dimen/rank_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="6"
        android:textSize="@dimen/rank_4_rank_size" />

    <TextView
        android:id="@+id/system_top_score_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username "
        android:textSize="@dimen/rank_4_text_size" />

    <TextView
        android:id="@+id/system_top_score_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/rank_4_text_size" />

    <TextView
        android:id="@+id/system_top_score_scoreIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pts"
        android:textSize="15sp" />
</LinearLayout>