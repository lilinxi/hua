<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/new_record_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="分数：1000"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/new_record_star1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_star_border"
            android:backgroundTint="@color/colorAccent"/>
        <TextView
            android:id="@+id/new_record_star2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_star_border"
            android:backgroundTint="@color/colorAccent"/>
        <TextView
            android:id="@+id/new_record_star3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_star_border"
            android:backgroundTint="@color/colorAccent"/>
        <TextView
            android:id="@+id/new_record_alert"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_alert"
            android:backgroundTint="@color/colorAccent"/>
    </LinearLayout>

</LinearLayout>